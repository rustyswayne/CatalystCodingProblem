@model Catalyst.Web.Areas.Editors.Models.PhotoEditor
    
@using (Html.BeginForm("Save", "PhotoEditor", FormMethod.Post, new { encType = "multipart/form-data", accept = "image/*",  @id = "photo-editor" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="input-group">
            <span class="btn btn-default btn-file input-group-addon">
                Browse... @Html.TextBoxFor(x => x.PostedFile, new { type = "file", name = "PostedFile" })
            </span>
            <input type="text" id="something" class="form-control" />
        </div>
    </div>

    <div class="form-group text-right">
        <button type="button" class="btn btn-default btn-cancel">Cancel</button>
        <input type="submit" class="btn btn-default" value="Add"/>
    </div>

}