@model Catalyst.Web.Areas.Editors.Models.InterestListEditor
    
@using (Html.BeginForm("Save", "InterestEditor", FormMethod.Post, new { @id = "interests-editor", @class = "form-inline" }))
{
    @Html.AntiForgeryToken()


    <div class="form-group">
        @Html.LabelFor(x => x.InterestName, new { @class = "control-label sr-only" })
        @Html.ValidationMessageFor(x => x.InterestName)
        @Html.TextBoxFor(x => x.InterestName, new { @class = "form-control", placeholder = "Interest" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Url, new { @class = "control-label sr-only" })
        @Html.TextBoxFor(x => x.Url, new { @class = "form-control", placeholder = "Url" })
    </div>
    
    <input type="submit" class="btn btn-default" value="Add" />
}

<table class="table table-striped">
    <thead>
    <tr>
        <th>Interest</th>
        <th>Url</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var i in Model.InterestList.Values)
    {
        <tr>
            <td>@i.Title</td>
            <td>@Html.If(() => !i.Url.IsNullOrWhiteSpace(), $"<a href=\"{i.Url}\" target=\"_blank\">")
            @i.Title
            @Html.If(() => !i.Url.IsNullOrWhiteSpace(), "</a>")</td>
            <td class="col-xs-1 text-center"><a href="#" class="delete-interest"><i class="glyphicon glyphicon-trash"></i></a></td>
        </tr>
    }
    </tbody>
</table>