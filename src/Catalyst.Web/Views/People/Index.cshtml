@using Catalyst.Core
@model Catalyst.Web.Models.PeopleList

<h3>List people here</h3>
@if (Model.People.Any())
{
    <table class="table table-striped">
        @foreach (var p in Model.People)
        {
            <tr>
                <td>Photo</td>
                <td><a href="@p.Url()">@p.FullName()</a></td>

            </tr>
        }
    </table>


    <div class="row people">

        <div class="col-sm-12">
            <div class="chart-wrapper">
                <div class="chart-title">
                    Impressions by advertiser
                </div>
                <div class="chart-stage">
                    <img data-src="holder.js/100%x150/white">
                </div>
                <div class="chart-notes">
                    Notes go down here
                </div>
            </div>
        </div>

    </div>


    <div class="container">
        <div class="row">
        @Html.Partial("_PersonTable", Model.People)
        </div>
    </div>
}