@using Catalyst.Core.Models.PropData
@model Catalyst.Web.Models.Dashboard.RandomWatch
@{
    Layout = "_DashboardItem.cshtml";
}


<div class="row">
    <div class="col-xs-7">
        <a href="@Model.Person.Url()">@Model.Person.FullName()</a>
        <div class="bio">
            @Html.Partial("_InterestList", Model.Person.GetPropertyValue<InterestList>(true))
        </div>
    </div>
    <div class="col-xs-5">
        @Html.Thumbnail(Model.Person.PhotoUrl(), Catalyst.Web.Constants.PersonEmptyPhoto, Model.Person.FullName(), "img-rounded" , "width=90")
    </div>
</div>

@Html.Partial("_SocialLinksBar", Model.Person.GetPropertyValue<SocialLinks>(true))
    
